<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinner" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinner_item" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="row1">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#78B2D3</item>
    </style>

    <style name="row2" parent="row1">
        <item name="android:background">#c5afeff2</item>
    </style>

    <style name="phoneNumber">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/phone</item>
    </style>

    <style name="frequency">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3655d2</item>

    </style>


</resources>
